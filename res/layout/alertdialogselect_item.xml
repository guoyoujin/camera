<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/submenu_item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/submenu_item_ll_height"
        android:background="@drawable/lines_click"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/submenu_item__tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textColor="@color/submenu_item_tv_color"
            android:textSize="@dimen/submenu_item_tv_size" />
    </LinearLayout>
</LinearLayout>